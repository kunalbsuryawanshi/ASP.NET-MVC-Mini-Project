@model Panchayat.Models.Signup

@{
    ViewData["Title"] = "Create";
}

<body class="row mt-0">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Panchayat</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Signups" asp-action="Login">Panchayat</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admins" asp-action="Create">Admin</a>
                        </li>
                        <li class="nav-item justify-content-end align-items-center d-flex w-100">
                            <button class="btn btn-primary rounded-pill shadow" onclick="location.href='@Url.Action("Login", "Signups")'">
                                Log In
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
</body>

<div class="row justify-content-center mt-5">
    <div class="col-sm-12 col-md-3 col-lg-3 mt-5 shadow-lg p-4">
        <h4 class="text-center mt-4 text-success">Sign Up</h4>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-4">
                <label asp-for="Email" class="control-label"></label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Enter email . . ." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Enter password . . ." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Sign Up" class="form-control bg-success shadow text-light mt-2" />
            </div>
            <div class="text-center mt-2">
                Already have an account ?
                <a class="text-decoration-none ms-1" asp-action="Login">Login</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
