@model IEnumerable<Panchayat.Models.Signup>

@{
    ViewData["Title"] = "Index";
}
<body class="row mt-0">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 shadow">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="RaiseFunds" asp-action="Create">Donate</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="PanchayatActivities" asp-action="ActivitiesForUser">Activities</a>
                        </li>
                        <li class="nav-item justify-content-end align-items-center d-flex w-100">
                            <button class="btn btn-danger rounded-pill shadow" onclick="location.href='@Url.Action("Index", "Home")'">
                                Log Out
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
</body>
<div class="row justify-content-center mt-5">
    <div class="col-sm-12 col-md-4 mt-5 d-flex justify-content-center">
        <a class="text-decoration-none text-dark" asp-controller="RaiseFunds" asp-action="Create">
            <div class="card shadow" style="width: 18rem;">
                <img src="~/Images/raisefund.jpg" class="card-img-top raisefund" alt="...">
                <div class="card-body">
                    <p class="card-text text-center fs-5">Raise Funds</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-sm-12 col-md-4 mt-5 d-flex justify-content-center">
        <a asp-controller="PanchayatActivities" asp-action="ActivitiesForUser" class="text-decoration-none text-dark">
            <div class="card shadow" style="width: 18rem;">
                <img src="~/Images/activity.jpg" class="card-img-top raisefund" alt="...">
                <div class="card-body">
                    <p class="card-text text-center fs-5">Panchayat Activities</p>
                </div>
            </div>
        </a>
    </div>
</div>
