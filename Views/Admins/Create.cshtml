@model Panchayat.Models.Admin

@{
    ViewData["Title"] = "Create";
}
<body class="row mt-0">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Panchayat</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Signups" asp-action="Login">Panchayat</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admins" asp-action="Create">Admin</a>
                        </li>
                        @*<li class="nav-item justify-content-end align-items-center d-flex w-100">
                            <button class="btn btn-primary rounded-pill shadow" onclick="location.href='@Url.Action("Login", "Signups")'">
                                Log In
                            </button>
                        </li>*@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
</body>

<div class="row justify-content-center mt-5">
    <div class="col-sm-12 col-md-3 col-lg-3 shadow-lg p-4">
        <h4 class="text-center text-primary mt-5">Admin</h4>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label mt-3"></label>
                <input type="password" asp-for="Username" class="form-control" placeholder="Enter username..."  required/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label mt-3"></label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Enter password..." required/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Log In" class="form-control shadow text-light bg-primary mt-3" />
            </div>
        </form>
        <button class="form-control bg-secondary mt-2 shadow">
            <a class="text-decoration-none text-light" asp-controller="Home" asp-action="Index">Back</a>
        </button>
    </div>
</div>

